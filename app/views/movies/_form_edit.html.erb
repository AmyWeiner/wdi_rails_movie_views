<%= form_for :post, url: @movie['imdbID'] do |f| %>
  <input name="_method" type="hidden" value="patch" />
  <%= label_tag(:title, "Title:") %> <%= f.text_field "movie[title]", value: @movie['title'] %></br>
  <%= label_tag(:year, "Year:") %> <%= f.text_field "movie[year]", value: @movie['year'] %></br>
  <%= f.submit "Save Changes" %>
<% end %>